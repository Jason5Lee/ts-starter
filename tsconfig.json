{
    "compilerOptions": {
        "module": "ES2020",
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "target": "ES2020",
        "noImplicitAny": true,
        "moduleResolution": "node16",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*", "src/types/*"]
        }
    },
    "include": ["src/**/*"],
    "ts-node": {
        "esm": true,
    },
}
